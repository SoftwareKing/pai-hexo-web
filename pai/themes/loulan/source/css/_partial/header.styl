/* CSS导航栏 */ 
.navbar-brand {
    padding: 5px 15px;
}

.navbar {
    margin-bottom: 2px;
    padding-top: 4px;
}

@media (min-width: 768px) {
    .navbar-default {
        background-color: transparent;
        margin-bottom: 0;
        border: 0;
        font-size: 16px;
        position: absolute;
        width: 100%;
        top: 15px;
        left: 0;
        z-index: 5;
    }

    .navbar-default .navbar-nav>li>a>p {
        margin: 0;
        color: #FFFFFF;
        padding-bottom: 10px;
    }

    .navbar-default .navbar-nav>li>a>p:hover {
        color: #FFFFFF;
        border-bottom: 3px solid #ffffff;
    }
}